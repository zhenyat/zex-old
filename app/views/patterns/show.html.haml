%p#notice= notice

%table.table.table-striped
  %tbody
    - @pattern.attributes.each do |key, value|
      - if key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at'
        //skip these attributes
      -else
        %tr
          - if key == 'status'
            %td= 'Status'
            %td= status_mark @pattern.status
          - elsif key == 'icon'
            %td= 'Icon'
            %td= image_tag @pattern.icon.url if @pattern.icon?
          -else
            %td= t "activerecord.attributes.subject.#{key}"
            %td= value

.form_actions
  .row
    .col-md-2
      = link_to 'Back', patterns_path, class: 'btn btn-primary btn-block'
