= include_gon(:init => true)
%div= render 'shared/tickers'

= simple_form_for(@run) do |f|
  = f.error_notification
  .row
    .col-md-2
      .form-inputs
        = f.association :pair, :collection => Pair.active.order(:name), autofocus: true, include_blank: false, input_html: {onchange: "changeFieldsValues()"}
        = f.input :start
        = f.input :depo
    .col-md-2
      .form-inputs
        = f.input :kind, input_html: {onchange: "changeStopLoss()"}
        = f.input :overlay
        = f.input :profit
    .col-md-2
      .form-inputs
        = f.input :last
        = f.input :martingale
        = f.input :scale
    .col-md-2
      .form-inputs
        = f.input :stop_loss
        = f.input :orders
        = f.input :status

  .form-actions
    = f.button :submit
